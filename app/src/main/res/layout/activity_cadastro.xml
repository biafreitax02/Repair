<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".CadastroActivity">



    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/baloo_da"
        android:text="Cadastro"
        android:textSize="24sp" />


    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="138dp"
        android:layout_marginTop="-50dp"
        android:fontFamily="@font/baloo_da"
        android:text="Repair"
        android:textSize="24sp" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:layout_gravity="center"
        android:layout_marginTop="-15dp"
        android:layout_marginBottom="56dp"
        android:src="@drawable/cadastro" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-77dp"
        android:fontFamily="@font/baloo_da"
        android:text="Cadastre-se"
        android:textSize="28sp" />


    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-8dp"
        android:fontFamily="@font/baloo_da"
        android:text="Já tem uma conta?"
        android:textSize="15sp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="-50dp"
        android:fontFamily="@font/baloo_da"
        android:textColor="@color/colorPrimary"
        android:text="Faça login!"
        android:onClick="login"
        android:textSize="15sp" />


    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-15dp"
        android:fontFamily="@font/baloo_da"
        android:text="Nome"
        android:textSize="19sp" />

    <View

        android:layout_width="350dp"
        android:layout_height="43dp"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="28dp"
        android:background="@drawable/round_cinza" />



    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/baloo_da"
        android:text="E-mail"
        android:textSize="19sp" />

    <View

        android:layout_width="350dp"
        android:layout_height="43dp"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="28dp"
        android:background="@drawable/round_cinza" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/baloo_da"
        android:text="Ocupação"
        android:textSize="19sp" />

    <View

        android:layout_width="350dp"
        android:layout_height="43dp"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="28dp"
        android:background="@drawable/round_cinza" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/baloo_da"
        android:text="Senha"
        android:textSize="19sp" />

    <View

        android:layout_width="350dp"
        android:layout_height="43dp"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="28dp"
        android:background="@drawable/round_cinza" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/baloo_da"
        android:text="Confirme a senha"
        android:textSize="19sp" />

    <View

        android:layout_width="350dp"
        android:layout_height="43dp"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="28dp"
        android:background="@drawable/round_cinza" />

    <ImageView

        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="-120dp"
        app:srcCompat="@drawable/eye" />

    <ImageView

        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="55dp"
        app:srcCompat="@drawable/eye" />


    <Button
        android:id="@+id/btnCadastraUser"
        android:layout_width="340dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_height="45dp"
        android:background="@drawable/round_button"
        android:textColor="#fff"
        android:onClick="cadastrar"
        android:textSize="16sp"
        android:fontFamily="@font/baloo_da"
        android:text="Próximo" />

    <EditText
        android:id="@+id/inputNome"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:ems="10"
        android:textSize="16sp"
        android:textCursorDrawable="@color/colorPrimary"
        android:backgroundTint="#F5F6FA"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-450dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/inputEmail"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:ems="10"
        android:textSize="16sp"
        android:textCursorDrawable="@color/colorPrimary"
        android:backgroundTint="#F5F6FA"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="45dp"
        android:inputType="textEmailAddress" />

    <Spinner
        android:id="@+id/spnOcupacao"
        android:layout_width="335dp"
        android:layout_height="44dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/colorPrimary"
        android:entries="@array/ocupacoes"
        android:spinnerMode="dropdown"/>

    <EditText
        android:id="@+id/inputSenha"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#F5F6FA"
        android:ems="10"
        android:inputType="textPassword"
        android:textCursorDrawable="@color/colorPrimary"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/inputConfirmaSenha"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#F5F6FA"
        android:ems="10"
        android:inputType="textPassword"
        android:textCursorDrawable="@color/colorPrimary"
        android:textSize="16sp" />


</LinearLayout>