<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <View

        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="-25dp"
        android:background="@drawable/round_profile" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="-80dp"
        android:src="@drawable/profile"
        app:civ_border_color="@color/colorTerciary"
        app:civ_border_width="3dp" />

    <ImageView
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginTop="-15dp"
        android:layout_marginLeft="250dp"
        android:src="@drawable/pen"
        />

    <TextView
        android:id="@+id/txtNomeAdm"
        android:layout_width="150dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        android:fontFamily="@font/font"
        android:layout_height="wrap_content"
        android:layout_marginLeft="145dp"
        android:text="Administrador" />

    <TextView
        android:id="@+id/txtEmailAdm"
        android:layout_width="150dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/font"
        android:layout_height="wrap_content"
        android:text="Adm@Repair.com" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/arruma"
        />

    <TextView

        android:layout_width="150dp"
        android:textStyle="bold"
        android:textSize="23dp"
        android:layout_gravity="center"
        android:layout_marginLeft="-45dp"
        android:layout_marginTop="-30dp"
        android:fontFamily="@font/font"
        android:layout_height="wrap_content"
        android:text="Conta" />




    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/notification"
        />

    <TextView

        android:layout_width="150dp"
        android:textStyle="bold"
        android:textSize="23dp"
        android:layout_gravity="center"
        android:layout_marginLeft="-45dp"
        android:layout_marginTop="-32dp"
        android:fontFamily="@font/font"
        android:layout_height="wrap_content"
        android:text="Notificações" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/relatorio"
        />

    <TextView

        android:layout_width="250dp"
        android:textStyle="bold"
        android:textSize="23dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-32dp"
        android:fontFamily="@font/font"
        android:layout_height="wrap_content"
        android:text="Política de privacidade" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/help"
        />

    <TextView

        android:layout_width="150dp"
        android:textStyle="bold"
        android:textSize="23dp"
        android:layout_gravity="center"
        android:layout_marginLeft="-45dp"
        android:layout_marginTop="-32dp"
        android:fontFamily="@font/font"
        android:layout_height="wrap_content"
        android:text="Ajuda" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/exit"
        />

    <TextView

        android:layout_width="170dp"
        android:textStyle="bold"
        android:textSize="23dp"
        android:layout_gravity="center"
        android:layout_marginLeft="-40dp"
        android:layout_marginTop="-32dp"
        android:fontFamily="@font/font"
        android:layout_height="wrap_content"
        android:text="Sair" />


</LinearLayout>