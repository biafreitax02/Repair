<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    android:orientation="vertical"
    tools:context=".LocalizacaoChamados">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/voltando" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="370dp"
        android:layout_marginTop="-25dp"
        android:src="@drawable/qrcode" />


    <View

        android:layout_width="360dp"
        android:layout_height="580dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/round_branco" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-710dp"
        android:src="@drawable/directions" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-10dp"
        android:fontFamily="@font/baloo_da"
        android:text="Localização do chamado"
        android:textSize="20sp" />

    <TextView
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="-70dp"
        android:fontFamily="@font/baloo_da"
        android:text="Para abrir um chamado automaticamente, use o QRCode."
        android:textAlignment="gravity"
        android:textColor="@color/colorPrimary"
        android:textSize="13sp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/baloo_da"
        android:text="Andar"
        android:textSize="20sp" />

    <RadioGroup
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="-15dp"
        android:orientation="vertical" >

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subsolo"
            android:buttonTint="@color/colorPrimary"
            android:textSize="19sp"
            android:fontFamily="@font/font"
            android:id="@+id/rbSubsolo"
            />

        <RadioButton
            android:fontFamily="@font/font"
            android:textSize="19sp"
            android:buttonTint="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1° Andar"
            android:id="@+id/rbPrimeiroAndar"
            />

        <RadioButton
            android:fontFamily="@font/font"
            android:textSize="19sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary"
            android:text="2° Andar"
            android:id="@+id/rbSegundoAndar"
            />
    </RadioGroup>

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/baloo_da"
        android:text="Sala/Ambiente"
        android:textSize="20sp" />

    <View

        android:layout_width="335dp"
        android:layout_height="50dp"
        android:layout_marginTop="-5dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/round_cinza" />

    <Spinner
        android:id="@+id/spnSala"
        android:layout_width="320dp"
        android:layout_height="44dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-50dp"
        android:backgroundTint="@color/colorPrimary"
        android:entries="@array/salas"
        android:spinnerMode="dropdown"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/baloo_da"
        android:text="Mesa"
        android:textSize="20sp"
        android:visibility="visible" />

    <View

        android:layout_width="335dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-5dp"
        android:background="@drawable/round_cinza"
        android:visibility="visible" />

    <Spinner
        android:id="@+id/spnMesa"
        android:layout_width="320dp"
        android:layout_height="44dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-50dp"
        android:backgroundTint="@color/colorPrimary"
        android:entries="@array/mesas"
        android:spinnerMode="dropdown"
        android:visibility="visible" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:onClick="segundaEtapaChamado"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/next" />

</LinearLayout>