<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".CadastroChamados">

    <ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_marginLeft="20dp"
    android:src="@drawable/voltando"
    android:layout_marginTop="30dp"
    />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="370dp"
        android:src="@drawable/qrcode"
        android:layout_marginTop="-25dp"
        />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="56dp"
        android:src="@drawable/problem" />


    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-65dp"
        android:fontFamily="@font/baloo_da"
        android:text="Abra um chamado"
        android:textSize="23sp" />

    <TextView
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-15dp"
        android:fontFamily="@font/baloo_da"
        android:textColor="@color/colorPrimary"
        android:text="Para abrir um chamado, preencha os campos abaixo."
        android:textSize="14sp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-15dp"
        android:fontFamily="@font/baloo_da"
        android:text="Descrição"
        android:textSize="20sp" />

    <View

        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="-5dp"
        android:layout_marginLeft="28dp"
        android:background="@drawable/round_cinza" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/description"
        android:layout_marginTop="-40dp"
        />


    <EditText
        android:id="@+id/inputDescricao"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="-30dp"
        android:backgroundTint="#F5F6FA"
        android:ems="10"
        android:focusable="auto"
        android:inputType="text"
        android:textCursorDrawable="@color/colorPrimary" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/baloo_da"
        android:text="Foto"
        android:textSize="20sp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="-43dp"
        android:fontFamily="@font/baloo_da"
        android:textColor="@color/colorPrimary"
        android:text="(opcional)"
        android:textSize="13sp" />

    <View

        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="28dp"
        android:background="@drawable/round_cinza" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/fotobj"
        android:layout_marginTop="-40dp"
        />

    <EditText
        android:id="@+id/inputFoto"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="-30dp"
        android:backgroundTint="#F5F6FA"
        android:ems="10"
        android:focusable="auto"
        android:inputType="text"
        android:textCursorDrawable="@color/colorPrimary" />

    <TextView
    android:layout_width="250dp"
    android:layout_height="50dp"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="10dp"
    android:fontFamily="@font/baloo_da"
    android:text="Local"
    android:textSize="20sp" />

    <View

        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="-5dp"
        android:layout_marginLeft="28dp"
        android:background="@drawable/round_cinza" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/place"
        android:layout_marginTop="-35dp"
        />


    <Spinner
        android:id="@+id/spnLocal"
        android:layout_width="315dp"
        android:layout_height="44dp"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="-35dp"
        android:backgroundTint="@color/colorPrimary"
        android:entries="@array/local"
        android:spinnerMode="dropdown"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/baloo_da"
        android:text="Mesa"
        android:textSize="20sp" />

    <View

        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="-15dp"
        android:layout_marginLeft="28dp"
        android:background="@drawable/round_cinza" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/pc"
        android:layout_marginTop="-35dp"
        />

    <Spinner
        android:id="@+id/spnMesa"
        android:layout_width="315dp"
        android:layout_height="44dp"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="-35dp"
        android:backgroundTint="@color/colorPrimary"
        android:entries="@array/local"
        android:spinnerMode="dropdown"/>

    <Button
        android:id="@+id/btnCadastraChamado"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/baloo_da"
        android:onClick="test"
        android:text="Cadastrar"
        android:textColor="#fff"
        android:textSize="16sp"
        android:visibility="visible" />


</LinearLayout>